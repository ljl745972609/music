<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="第6组app成果" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关于系统"
        android:textSize="60dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="    感谢您使用西华师范大学2016级5班第6小组开发的音乐播放器，此软件为运行在Android平台的应用，这个应用你在各个应用商店都不可以下载，如果您有一些意见或这好的建议，请您保留，如果我们的软件有一些bug，您可以考虑一下卸载这个软件，反正我们是不会再维护这个软件的，您可以安装其他的音乐软件，毕竟qq音乐和网易云音乐这些都是很不错的软件，长得又好看，声音又好听" />

    <RelativeLayout
        android:layout_height="120dp"
        android:layout_width="match_parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:id="@+id/btn_fst"
            android:text="亲，好评五星哟!" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="离开此界面"
            android:layout_below="@+id/btn_fst" />
    </RelativeLayout>

</LinearLayout>

